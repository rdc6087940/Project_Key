$(function(){
	
	var img1= $('#dom1');
	var img2= $('#dom2');
	var img3= $('#dom3');
	
	img1.css("cursor","pointer").click(function(){
		location.href = 'detail.html';
	});
	
	img1.next().next().hide();
	img1.hover(function(){
		img1.next().next().slideDown(2000);
	},function(){
		img1.next().next().slideUp(2000);
	})
	
	img2.css("cursor","pointer").click(function(){
		location.href = 'detail.html';
	});
	
	img3.css("cursor","pointer").click(function(){
		location.href = 'detail.html';
	});
	
});